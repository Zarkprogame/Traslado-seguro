@page
@model Traslado_Seguro.Pages.Account.LoginModel
@{
}

<form method="post">
	<div class="text-danger" asp-validation-summary="ModelOnly"></div>
	<div class="mb-3">
		<label for="InputEmail" class="form-label">Email Address</label>
		<input asp-for = "Conductor.Email" type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" />
		<div id="emailHelp" class="form-text">We'll never Share your Email with anyone else.</div>
		<div>
			<span class="text-danger" asp-validation-for="Conductor.Email"></span>
		</div>
	</div>

	<div class="mb-3">
		<label for="InputPassword" class="form-label">Password</label>
		<input asp-for="Conductor.Password" type="password" class="form-control" id="InputPassword" />
		<div>
			<span class="text-danger" asp-validation-for="Conductor.Password"></span>
		</div>
	</div>
	
	<div class="mb-3 form-check">
		<input type="checkbox" class="form-check-input" id="Check" />
		<label for="Check" class="form-check-label">Check me out</label>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>

